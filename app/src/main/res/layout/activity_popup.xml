<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.vogella.android.navigationwidgetattempt.PopupActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <android.support.v7.widget.Toolbar
        android:id="@+id/popup_toolbar"
        android:background="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <View
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="You have disable your location provider. If you want to continue to recieve driver requests, you have to enable the location"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textColor="@color/colorPrimary"
                android:background="@color/white"
                android:id="@+id/enable_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Enable Loaction"
                android:layout_weight="1"
                android:paddingBottom="@dimen/activity_vertical_margin"/>
            <View
                android:layout_gravity="center_vertical"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#33000000"/>
            <TextView
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textColor="@color/red2"
                android:background="@color/white"
                android:id="@+id/become_inactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Become Inactive"
                android:layout_weight="1"
                android:paddingBottom="@dimen/activity_vertical_margin"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
